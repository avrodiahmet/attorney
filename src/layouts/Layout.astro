---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, imageUrl } = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <style>
      body {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      div > img {
        max-height: 400px;
        width: 100%;
        border-radius: 0;
      }

      main {
        flex-grow: 1;
        padding: 20px;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 10px;
      }

      p {
        line-height: 1.6;
      }

      address {
        font-style: normal;
        line-height: 1.8;
        margin-top: 20px;
      }
    </style>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    {imageUrl && <div> <img src={imageUrl} alt="" /> </div>}
    <main>
      <h1>{title}</h1>
      <p>{description}</p>
      <slot />
    </main>
    
    <Footer />
  </body>
</html>